# Go Goal Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgres://go_goal_user:go_goal_password@localhost/go_goal?sslmode=disable

# Server Configuration
PORT=8080

# Development Configuration
ENVIRONMENT=development
DEBUG=true

# Frontend Configuration (for reference)
# These are used by the frontend config.js
FRONTEND_PORT=3000
API_BASE_URL=http://localhost:8080

# Optional: Enable features
REAL_TIME_UPDATES=true
OFFLINE_MODE=true
ANALYTICS=false

# Optional: Database connection pool settings
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_LIFETIME=5m

# Optional: Logging
LOG_LEVEL=info
LOG_FORMAT=json